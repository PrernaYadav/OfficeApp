<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_mr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/btntransparent"
        android:text="Edit"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_mr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:background="@color/btntransparent"
        android:text="Save"
        android:visibility="gone" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical">


        <TableLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TableLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_material"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="MATERIAL"
                            android:textColor="@color/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_unit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:paddingRight="-10dp"
                            android:text="UNIT"
                            android:textColor="@color/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView

                            android:id="@+id/tv_quantity"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="QUANTITY"
                            android:textColor="@color/white" />
                    </TableRow>

                    <!--  <TableRow
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:background="@drawable/header_border"
                          android:gravity="center">

                          <TextView
                              android:id="@+id/tv_amount"

                              android:layout_width="match_parent"
                              android:layout_height="42dp"
                              android:gravity="center"
                              android:text="AMOUNT"
                              android:textColor="@color/white" />
                      </TableRow>-->


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_material_recevd"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingTop="5dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <Spinner
                            android:id="@+id/spinner_material_received_adap1"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:visibility="gone">


                        </Spinner>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editor_border">

                        <TextView
                            android:id="@+id/tv_unit_adap"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:padding="10dp"
                            android:singleLine="true"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinner_material_received_unit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true"
                            android:visibility="gone"/>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editor_border">

                        <EditText
                            android:id="@+id/et_material_received_quantity_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true"
                            android:textStyle="bold" />
                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>
</LinearLayout>