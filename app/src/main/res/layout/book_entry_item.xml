<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <Button
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btntransparent"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Edit"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_be"/>
    <Button
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:background="@color/btntransparent"
        android:text="Save"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_be1"/>



    <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                   >

                    <TableLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/header_border"
                            android:gravity="center"
                            android:padding="10dp">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_discription_of_item"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DESCRIPTION OF ITEM"
                                    />

                            </TableRow>
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/header_border"
                            android:gravity="center"
                            android:padding="10dp">

                            <TextView
                                android:textColor="@color/white"
                                android:id="@+id/tv_nos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NOS."
                               />
                        </TableRow>
                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/header_border"
                            android:gravity="center"
                            android:padding="10dp">

                            <TextView
                                android:textColor="@color/white"
                                android:id="@+id/tv_unit1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UNIT"
                                />
                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:weightSum="2">

                            <TableLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TableRow
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:background="@drawable/header_border"
                                    android:gravity="center"
                                    android:paddingBottom="50dp"
                                    android:paddingTop="47dp">

                                    <TextView
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_measurement"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MEASUREMENTS"
                                         />

                                </TableRow>

                            </TableLayout>

                            <TableLayout
                                android:layout_weight="1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                               >

                                <TableRow
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/sub_header_border"
                                    android:padding="9dp">

                                    <TextView
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_l"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="L"
                                       />

                                </TableRow>

                                <TableRow
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/sub_header_border"
                                    android:padding="9dp">

                                    <TextView
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_b"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="B"
                                        />

                                </TableRow>

                                <TableRow
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/sub_header_border"
                                    android:padding="11dp">

                                    <TextView
                                        android:textColor="@color/white"
                                        android:id="@+id/tv_h"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:text="H"
                                      />

                                </TableRow>

                            </TableLayout>

                        </TableRow>

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/header_border"
                            android:gravity="center"
                            android:padding="9dp">

                            <TextView
                                android:textColor="@color/white"
                                android:id="@+id/tv_qtys"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="QTYS."
                                />
                        </TableRow>

                    </TableLayout>

                    <TableLayout
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                       >

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/editor_border">

                            <EditText
                                android:background="@null"
                                android:id="@+id/et_doi_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:paddingTop="3dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:singleLine="true"

                                />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/editor_border">

                            <EditText
                                android:background="@null"
                                android:id="@+id/et_nos_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:inputType="number"
                                android:paddingTop="3dp"
                                android:singleLine="true" />
                        </TableRow>

                        <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/editor_border"
                            android:gravity="center">
                            <TextView
                                android:background="@null"
                                android:id="@+id/tv_unit"
                                android:layout_width="100dp"
                                android:layout_height="40dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:paddingTop="5dp"
                                android:visibility="visible"
                                android:textColor="@android:color/black"
                                android:singleLine="true" />

                        <Spinner
                            android:id="@+id/spinner_mbe_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:visibility="gone"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:singleLine="true">


                        </Spinner>

                        </TableRow>

                       <!-- -->

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/editor_border">

                            <EditText
                                android:background="@null"
                                android:id="@+id/et_l_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:paddingTop="3dp"
                                android:inputType="number"
                                android:layout_weight="1"
                                android:singleLine="true" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/editor_border">

                            <EditText
                                android:id="@+id/et_b_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="10dp"
                                android:layout_weight="1"
                                android:background="@null"
                                android:gravity="left"
                                android:inputType="number"
                                android:paddingTop="3dp"
                                android:singleLine="true"
                                android:textStyle="bold" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/editor_border">

                            <EditText
                                android:background="@null"
                                android:id="@+id/et_h_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="10dp"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:paddingTop="3dp"
                                android:layout_weight="1"
                                android:inputType="number"
                                android:singleLine="true" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:background="@drawable/editor_border">

                            <TextView
                                android:background="@null"
                                android:id="@+id/et_qtys_adap"
                                android:layout_width="100dp"
                                android:layout_height="38dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@android:color/black"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:gravity="left"
                                android:textStyle="bold"
                                android:paddingTop="5dp"
                                android:singleLine="true" />
                        </TableRow>

                    </TableLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
</LinearLayout>