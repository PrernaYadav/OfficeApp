<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:visibility="visible"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Edit"
        android:background="@color/btntransparent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/btn"/>
    <Button
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Save"
        android:background="@color/btntransparent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_save1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">

                <TableLayout
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:gravity="center">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_workname"

                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:gravity="center"
                            android:text="WORK NAME"
                            android:textColor="@color/white"

                            />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/header_border"
                            android:gravity="center">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_skilled"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="SKILLED"
                                    android:textColor="@color/white"

                                    />


                            </TableRow>

                        </TableLayout>

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/sub_header_border">

                                <TextView
                                    android:id="@+id/tv_s_nos"

                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="NO's"
                                    android:textColor="@color/white"

                                    />


                            </TableRow>


                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_s_payment"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="PAYMENT"
                                    android:textColor="@color/white"

                                    />


                            </TableRow>

                            <!--</TableLayout>-->


                            <!-- </TableRow>-->

                        </TableLayout>


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="2">

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/header_border"
                            android:gravity="center">

                            <TableRow
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_unskilled"

                                    android:layout_width="fill_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="UNSKILLED"
                                    android:textColor="@color/white"
                                    android:textSize="12dp" />


                            </TableRow>

                        </TableLayout>

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center">

                            <TableRow
                                android:layout_width="fill_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/sub_header_border">

                                <TextView
                                    android:id="@+id/tv_us_nos"

                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="NO's"
                                    android:textColor="@color/white"

                                    />


                            </TableRow>


                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_us_payment"

                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="PAYMENT"
                                    android:textColor="@color/white"

                                    />


                            </TableRow>

                            <!--</TableLayout>-->


                            <!-- </TableRow>-->

                        </TableLayout>


                    </TableRow>

                    <TableRow

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_agency"

                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="AGENCY"
                            android:textColor="@color/white"

                            />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="AMOUNT"
                            android:textColor="@color/white"

                            />


                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="center">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/spinner_workname_adap"
                            android:layout_width="120dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:singleLine="true"

                            android:visibility="visible"

                            />
                        <Spinner
                            android:id="@+id/spinner_workname_adap1"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textSize="15dp" />



                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/et_s_nos_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/et_s_payment_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/et_us_nos_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/et_us_payment_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:inputType="number"
                            android:singleLine="true" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <EditText
                            android:id="@+id/et_agency_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:visibility="visible"
                            android:singleLine="true" />
                        <Spinner
                            android:id="@+id/et_agency_adap1"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:visibility="gone"
                            android:singleLine="true"
                            android:textSize="15dp" />


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"

                        android:layout_height="match_parent"
                        android:background="@drawable/editor_border"
                        android:gravity="center"
                        android:paddingLeft="10dp">

                        <TextView
                            android:id="@+id/et_amount_adap"
                            android:layout_width="fill_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:paddingTop="5dp"
                            android:textColor="@android:color/black"
                            android:background="@null"
                            android:singleLine="true" />


                    </TableRow>
                </TableLayout>
            </TableRow>
        </TableLayout>


    </LinearLayout>



</LinearLayout>