<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <Button
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/btntransparent"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Edit"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_pc"/>
    <Button
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:background="@color/btntransparent"
        android:text="Save"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_pc1"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="5dp"
            android:gravity="center">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_description_petty"
                            android:layout_width="match_parent"

                            android:layout_height="40dp"
                            android:gravity="center"
                            android:paddingRight="5dp"
                            android:text="DESCRIPTION"
                            android:textColor="@color/white" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="44dp"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_received_petty"

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="RECIEVED"
                            android:textColor="@color/white" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_paid_petty"

                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="PAID"
                            android:textColor="@color/white" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tv_balance_petty"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="BALANCE"
                            android:textColor="@color/white" />
                    </TableRow>


                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_description_petty_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:background="@null" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_received_petty_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:inputType="number"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:background="@null" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/et_paid_petty_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:singleLine="true"
                            android:background="@null" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/et_balance_petty_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true"

                            android:background="@null" />
                    </TableRow>


                </TableLayout>


            </TableRow>
        </TableLayout>


    </LinearLayout>



</LinearLayout>