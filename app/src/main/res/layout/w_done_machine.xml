<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <Button
        android:visibility="visible"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Edit"
        android:background="@color/btntransparent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_wdm"/>
    <Button
        android:visibility="gone"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginEnd="15dp"
        android:text="Save"
        android:background="@color/btntransparent"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btn_wdm1"/>


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <TableLayout
                    android:layout_width="185dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/header_border"
                        android:gravity="center">

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/tv_description"
                            android:layout_width="fill_parent"
                            android:layout_height="35dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="DESCRIPTION" />

                    </TableRow>

                    <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/header_border"
                            android:gravity="center"
                            android:padding="5dp">

                            <TableRow
                                android:layout_width="match_parent"

                                android:layout_height="fill_parent"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tv_payment_detail"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:padding="15dp"
                                    android:text="@string/payment_ndetail"/>
                            </TableRow>


                        </TableLayout>

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_hours"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="HOURS" />

                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/sub_header_border"
                                android:gravity="center">


                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_rate"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="RATE" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_amount"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="AMOUNT" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/tv_paid"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:gravity="center"
                                    android:text="PAID" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"

                                android:background="@drawable/sub_header_border"
                                android:gravity="center">

                                <TextView
                                    android:textColor="@color/white"
                                    android:id="@+id/dueamount"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:gravity="center"
                                    android:text="@string/due_namount" />
                            </TableRow>


                        </TableLayout>

                    </TableRow>

                </TableLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:id="@+id/description_spinner_workDone_M_adap"
                            android:layout_width="180dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="@null"
                            android:visibility="visible"
                            android:singleLine="true">

                        </EditText>
                        <Spinner
                            android:id="@+id/description_spinner_workDone_M_adap1"
                            android:layout_width="100dp"
                            android:visibility="gone"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:singleLine="true"
                            android:textSize="15dp" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:background="@null"
                            android:id="@+id/et_hours_workDone_M_adap"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"

                            android:inputType="number"
                            android:singleLine="true" />

                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:background="@null"
                            android:id="@+id/et_rate_workDone_M_adap"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <TextView
                            android:background="@null"
                            android:id="@+id/et_amount_work_Done_M_adap"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:textColor="@android:color/black"
                            android:paddingTop="5dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <EditText
                            android:background="@null"
                            android:id="@+id/et_paid_workDone_m_adap"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content"

                        android:background="@drawable/editor_border"
                        android:gravity="center">

                        <TextView
                            android:background="@null"
                            android:id="@+id/tv_due_amount_workDome_M_adap"
                            android:layout_width="match_parent"
                            android:inputType="number"
                            android:layout_height="40dp"
                            android:textColor="@android:color/black"
                            android:paddingTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:singleLine="true" />
                    </TableRow>

                </TableLayout>
            </TableRow>
        </TableLayout>
    </LinearLayout>


</LinearLayout>