<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="left">


    <include
        layout="@layout/app_bar_report"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start">
        <!--app:headerLayout="@layout/nav_header_report"
        app:menu="@menu/activity_report_drawer"-->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/one"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/background_login"
                    android:src="@drawable/logo_office" />

                <TextView
                    android:id="@+id/two"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_below="@+id/one"
                    android:background="@drawable/focus"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="WORK DONE MANPOWER"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/three"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/two"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="WORK DONE MACHINE"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/four"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/three"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="AIPL MATERIAL"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/five"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/four"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="MATERIAL BOUGHT"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/six"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/five"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="PETTYCASH"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/seven"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/six"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="TOMORROW PLANNING"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/eight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seven"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="HINDRANCE"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/nine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eignt"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="MEASUREMENT BOOK ENTRY"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eignt"
                    android:paddingBottom="10dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp"
                    android:text="LOGOUT"
                    android:textColor="@android:color/black" />

            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
